{
  "name": "oss-directory",
  "version": "0.0.3",
  "description": "Open source software directory",
  "repository": "git@github.com:hypercerts-org/oss-directory.git",
  "author": "Hypercerts Foundation",
  "license": "Apache-2.0",
  "bin": "./dist/cli.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "pnpm types:json && tsc",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "format:staged": "lint-staged",
    "lint": "tsc --noEmit && pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint --ignore-path ./.gitignore --max-warnings 0 --cache .",
    "lint:prettier": "prettier --ignore-path ./.gitignore --log-level warn --check **/*.ts",
    "prepack": "pnpm build",
    "prepare": "husky install",
    "start": "ts-node --esm src/cli.ts",
    "test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest --passWithNoTests",
    "types:json": "pnpm json2ts -i './src/resources/schema/' -o 'src/types' --cwd './src/resources/schema'",
    "validate:collections": "pnpm start validate-collections",
    "validate:projects": "pnpm start validate-projects"
  },
  "keywords": [],
  "devDependencies": {
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.8",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "json-schema-to-typescript": "^13.0.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.3.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "glob": "^10.3.3",
    "lodash": "^4.17.21",
    "simple-git": "^3.19.1",
    "tmp-promise": "^3.0.3",
    "ts-adt": "^2.1.2",
    "winston": "^3.10.0",
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  }
}
