{
  "name": "oss-directory",
  "version": "0.0.1",
  "description": "Open source software directory",
  "repository": "git@github.com:hypercerts-org/oss-directory.git",
  "author": "Hypercerts Foundation",
  "license": "Apache-2.0",
  "bin": "./dist/src/cli.js",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "lint": "tsc --noEmit && yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --ignore-path ../.gitignore --max-warnings 0 --cache .",
    "lint:prettier": "prettier --ignore-path ../.gitignore --loglevel warn --check **/*.ts",
    "start": "ts-node --esm src/cli.ts",
    "test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest"
  },
  "keywords": [],
  "devDependencies": {
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.6",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "ts-adt": "^2.1.2",
    "winston": "^3.10.0",
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  }
}
